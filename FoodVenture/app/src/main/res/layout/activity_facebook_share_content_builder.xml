<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vish.foodventure.ui.FacebookShareContentBuilder">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/action_menu_bar"
        android:background="?colorPrimary"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_menu_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Restaurant Name"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:textColor="?colorPrimaryDark"
            android:textSize="23sp"
            android:id="@+id/fb_restaurant_name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:hint="Description"
            android:id="@+id/fb_description" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Hashtag"
            android:textSize="20sp"
            android:id="@+id/hashtagRadioButton" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fb_hashtag"
            android:textSize="20sp"
            android:hint="Hashtag"/>

        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:background="?colorPrimary"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20sp"
            android:id="@+id/fb_share_button"
            android:layout_gravity="center" />
    </LinearLayout>


</RelativeLayout>
